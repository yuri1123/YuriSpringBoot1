<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 파일이름을 지칭하는 네임스페이스 -->
<mapper namespace="com.yuls.yspringboot1.userMapper">

    <!-- 유저 회원가입 -->
    <insert id="createuser" parameterType="UserDto">
        insert into User(userid,password,email,nickname,regdate,moddate,createdby,modifiedby)
        values (#{userid},#{password},#{email},#{nickname},now(),now(),#{createdby},#{modifiedby})
    </insert>
    <!-- 유저 회원정보 수정 -->
    <update id="updateuser" parameterType="UserDto">
        update User set password=#{password},email=#{email},nickname=#{nickname},moddate=now(),modifiedby=#{modifiedby}
        where id=#{id}
    </update>
    <!-- 유저 전체 조회 -->
    <select id="selectuser" resultType="UserDto">
        select * from User
    </select>
    <!-- 유저 로그인 -->
    <select id="login" parameterType="UserDto" resultType="UserDto">
        select * from User where userid=#{userid} and password=#{password}
    </select>
    <!-- 유저 삭제 -->
    <delete id="deleteuser" parameterType="java.lang.Long">
        delete from User where id=#{id}
    </delete>
</mapper>